<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2d313c"
    android:padding="10dp"
    tools:context=".ui.WelcomeActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="53dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:srcCompat="@drawable/android" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:fontFamily="serif-monospace"
        android:text="IdSystem"
        android:textColor="#3e5990"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_cadastrar_pd"
        android:background="@drawable/buttonshapetelainicial"
        android:text="Cadastrar pessoas sem identificação"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:textColor="#a9a9a9"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:textSize="15sp"
        android:onClick="cadastrarInfos"/>

    <Button
        android:id="@+id/btn_atualizar_info"
        android:background="@drawable/buttonshapetelainicial"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="105dp"
        android:backgroundTint="#3e5a8f"
        android:text="Buscar Pessoas"
        android:textColor="#a9a9a9"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/btn_cadastrar_pd"
        app:layout_constraintTop_toBottomOf="@+id/btn_cadastrar_pd"
        android:onClick="buscarPessoas"/>


</androidx.constraintlayout.widget.ConstraintLayout>

