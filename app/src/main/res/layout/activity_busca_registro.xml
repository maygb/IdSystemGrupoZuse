<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2d313c"
    android:padding="10dp"
    tools:context=".BuscaRegistroActivity">

    <TextView
        android:id="@+id/tv_pd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="Busca por CPF"
        android:textColor="#a9a9a9"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/et_pd_nome"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_pd_nome"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/etshape"
        android:hint="Nome"
        android:paddingStart="5dp"
        android:textColor="#a9a9a9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pd" />

    <Button
        android:id="@+id/button"
        android:text="Buscar"
        android:textColor="#FFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:background="@drawable/buttonshape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="buscarRegistro"
        />

</androidx.constraintlayout.widget.ConstraintLayout>